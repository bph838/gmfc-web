{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Webpack Plugin",
      "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
      "args": ["--mode", "development"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}